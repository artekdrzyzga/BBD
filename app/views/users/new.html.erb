<section id="banner">
  <div class="content">
     <%= simple_form_for [@user] do |f| %>
           <%= render 'shared/errors', object: @user %>
           <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :phone%>
            <%= f.input :company_name%>
            <%= f.input :zip_code%>
            <%= f.input :street%>
            <%= f.input :city%>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
             <%= f.submit class: "btn btn-primary" %>
      <% end %>
  </div>
</section>
<%= simple_form_for [:admin, @product], remote: true do |f| %>
  <div class="col-12">
    <div class="row">
      <div class="col-5">
         <%= f.input :code %>
      </div>
      <div class="col-7">
          <%= f.input :name %>
      </div>
    </div>
    <div class="row">
      <div class="col-7">
         <%= f.input :price %>
      </div>
      <div class="col-5">
          <%= f.input :quantity %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
       <%= f.input :description %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
         <%= f.input :width %>
      </div>
      <div class="col-6">
          <%= f.input :height %>
      </div>
    </div>
     <div class="row">
      <div class="col-4">
          <%= f.input :status, :label => "Visible" %>
      </div>




      <div class="col-4">
           <%#= f.association :category, :input_html => {:onchange => "alert('Hello woirld')", id: "mySelect"}  %>
           <%#= f.association :category, :input_html => {:onchange => "myFunction()", id: "mySelect"}  %>
           <%#= f.association :category, :input_html => {:onchange => "redirect_to root_path", id: "mySelect"}  %>
 
               <%= f.association :category, category.order(:name)%>
         

           <p id="demo"></p>
      </div>
      <div class="col-4">      
           <%= f.association :subcategory %>
      </div>
    </div>







    <div class="row">
      <div class="col-7">
           <%= f.input :picture, as: :file %>
      </div>
      <div class="col-5">
            <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>





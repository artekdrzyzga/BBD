<div class="search-form">
  <%= search_form_for [:admin, @q], :builder => SimpleForm::FormBuilder do |f| %> 
     <div class="row">
       <div class="col-4"><%= f.input :code_cont, label: 'Product code', input_html: {value: ""} %></div>
       <div class="col-4"><%= f.input :name_cont,label: 'Product name', input_html: {value: ""} %></div>
       <div class="col-4" style="text-align:right"><%= f.submit "Search" %></div>
    </div>
  <%end%>
</div>

<%= link_to new_admin_product_path, class: "btn btn-success" do %>
  <span class="fa fa-plus fa-spin"></span> Add new product
<% end %>

 <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Product code</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Category</th> 
      <th>Subcategory</th> 
      <th>Visible??</th> 
      <th>Edit</th>
      <th>Delete</th>
    </tr>
   </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.code %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency product.price %></td> 
          <td><%= product.quantity %></td>
          <td><%= product.category.name %></td>
          <td><%= product.subcategory.name %></td>
          <td><%= product.status %></td>
          <td>
            <%= link_to edit_admin_product_path(product), class: "btn btn-default btn-xs", data:{ turbolinks: "false" } do %>
              <span class="fa fa-edit"></span>
            <%end%>
          </td>
          <td>
            <%= link_to admin_product_path(product), method: :delete, class: "btn btn-default btn-xs",data: {confirm: "Are you sure ?"} do %>
              <span class="fa fa-trash"></span>
            <%end%>
          </td>
        </tr>
      <% end %>     
     </tbody>   
    </table><br />   
<%= paginate @products %>
<%= link_to new_admin_category_path, class: "btn btn-success" do %>
  <span class="fa fa-plus"></span> Add new Category
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td>
        <%= link_to edit_admin_category_path(category), class: "btn btn-default btn-xs" do %>
          <span class="fa fa-edit"></span>
        <%end%>
      </td>
      <td>
        <%= link_to admin_category_path(category), method: :delete, class: "btn btn-default btn-xs",data: {confirm: "Are you sure ?"} do %>
          <span class="fa fa-trash"></span>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

